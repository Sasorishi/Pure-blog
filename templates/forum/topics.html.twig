{% extends 'forum.html.twig' %}
{% block body %}

<section class="topics">
    <div class="container-fluid">
        <div class="wrapper-content">
        {% if topics is empty %}
            <div class="row">
                <div class="col-12">
                    <p>Aucun topics</p>
                </div>
            </div>
        {% else %}
            {% for topic in topics %}
                <a href="{{ path('post', {'id': topic.idtopics, 'topics': topic.topics}) }}">
                    <p>{{ topic.topics }}</p>
                </a>
            {% endfor %}
        {% endif %}

        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                Créer un nouveau topics
            </button>
        {% else %}
            <p>Connecter vous pour créer un nouveau topics</p>
        {% endif %}

        </div>
    </div>
</section>

<!-- Modal -->
<form method="post">
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="formGroupExampleInput">Titre de topics</label>
                        <input type="text" name="title" class="form-control" id="formGroupExampleInput">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Message</label>
                        <textarea class="form-control" name="message" id="exampleFormControlTextarea1" rows="4"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</form>
{% endblock %}
{% extends 'blog.html.twig' %}
{% block body %}

<!-- #### Section Header #### -->
<section class="brand blog-background">
    <nav class="navbar navbar-expand-lg navbar-background">
        <a class="logo-brand" href="{{ path('home') }}"><img src="{{ asset('assets/img/pro-white.png') }}"
                alt="logo-brand"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
            aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav mx-auto">
                <li class="nav-item">
                    <a class="nav-item nav-link active" href=""><span class="navbar-text">articles</span></a>
                </li>
                {# <li class="nav-item active">
                    <a class="nav-item nav-link active" href=""><span class="navbar-text">actualité</span></a>
                </li> #}
                <li class="nav-item">
                    <a class="nav-item nav-link active" href=""><span class="navbar-text">événement</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-item nav-link active" href=""><span class="navbar-text">interview</span></span></a>
                </li>
            </ul>
        </div>

        <div class="ml-auto d-flex">
            <ul class="navbar-nav">
                <li class="nav-item social">
                    <a class="nav-item nav-link active" href="{{ path('home') }}"><span
                            class="navbar-text">site</span></a>
                </li>
                <li class="nav-item social">
                    <a class="nav-item nav-link active" href="{{ path('forum') }}"><span
                            class="navbar-text">forum</span></a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="wrapper-content">
            <div class="row">
                <div class="logo mx-auto">
                    <h1>blog</h1>
                    <p>tout savoir sur la parfumerie engagée</p>
                </div>
            </div>

            <div class="row know_more">
                <div class="d-flex flex-column mx-auto">
                    <span>Découvrez PROMESSENCE</span>
                    <img class="mx-auto" width="32" src="{{ asset('assets/icons/down-arrow.png') }}"
                        alt="Responsive image">
                </div>
            </div>
        </div>
    </div>
</section>

<section class="article">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('blog') }}">blog</a></li>
            <li class="breadcrumb-item"><a href="">événement</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ event.getTitle() }}</li>
        </ol>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <div class="cover">
                <img src="{{ asset('../events/' ~ event.idevent ~ '/' ~ event.thumbnail) }}"
                alt="img_article">
            </div>
        </div>

        <div class="row">
            <div class="col-10 p-0">
                <div class="header-content">
                    <div class="category">
                        <h5>{{ event.getCreated()|date("d/m/Y - H:i") }}</h5>
                    </div>

                    <div class="title">
                        <h1>{{ event.getTitle() }}</h1>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12 p-0">
                <div class="article-content">
                    <p>{{ event.getContent() }}</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="d-flex flex-row justify-content-center align-item-center">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                        <span>Participer</span>
                    </button>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="social-share d-flex flex-row justify-content-end align-item-center">
                    <div class="btn-facebook">
                        <a href="https://www.facebook.com/sharer/sharer.php?u=example.org" target="_blank">
                            <img src="{{ asset('assets/icons/share-facebook.png') }}" alt="share">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Inscription</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Prénom</label>
                    <input type="text" class="form-control" name="firstName" placeholder="Prénom">
                </div>
                <div class="form-group col-md-6">
                    <label>Nom</label>
                    <input type="text" class="form-control" name="lastName" placeholder="Nom">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-12">
                    <label>Email</label>
                    <input type="email" name="email" class="form-control" placeholder="jean@gmail.com">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-12">
                    <label>Téléphone</label>
                    <input type="password" name="password" class="form-control" placeholder="+33 6 59 72 90 22">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-12">
                    <label>Sexe</label>
                    <select name="sexe" class="form-control">
                        <option value="Homme">Homme</option>
                        <option value="Femme">Femme</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
          <button type="button" class="btn btn-primary">Valider</button>
        </div>
      </div>
    </div>
  </div>

{% endblock %}
{% extends 'blog.html.twig' %}
{% block body %}

<!-- #### Section Header #### -->
<section class="brand blog-background">
    <nav class="navbar navbar-expand-lg navbar-background">
        <a class="logo-brand" href="{{ path('home') }}"><img src="{{ asset('assets/img/pro-white.png') }}"
                alt="logo-brand"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
            aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav mx-auto">
                <li class="nav-item">
                    <a class="nav-item nav-link active" href=""><span class="navbar-text">articles</span></a>
                </li>
                {# <li class="nav-item active">
                    <a class="nav-item nav-link active" href=""><span class="navbar-text">actualité</span></a>
                </li> #}
                <li class="nav-item">
                    <a class="nav-item nav-link active" href=""><span class="navbar-text">événement</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-item nav-link active" href=""><span class="navbar-text">interview</span></span></a>
                </li>
            </ul>
        </div>

        <div class="ml-auto d-flex">
            <ul class="navbar-nav">
                <li class="nav-item social">
                    <a class="nav-item nav-link active" href="{{ path('home') }}"><span
                            class="navbar-text">site</span></a>
                </li>
                <li class="nav-item social">
                    <a class="nav-item nav-link active" href="{{ path('forum') }}"><span
                            class="navbar-text">forum</span></a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="wrapper-content">
            <div class="row">
                <div class="mx-auto">
                    <h1>blog</h1>
                    <p>tout savoir sur la parfumerie engagée</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="article">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('blog') }}">blog</a></li>
            <li class="breadcrumb-item"><a href="">{{ article.label }}</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ article.title }}</li>
        </ol>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 p-0">
                <div class="article-card">
                    <div class="cover">
                        <img src="{{ asset('../articles/' ~ article.idarticle ~ '/' ~ article.thumbnail) }}"
                        alt="img_article">
                        <div class="article-category">
                            <span>{{ article.label }}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-10 p-0">
                <div class="header-content">                    
                    <div class="title">
                        <h1>{{ article.title }}</h1>
                    </div>

                    <div class="lead">
                        <p>{{ article.lead }}</p>
                    </div>

                    <p class="firstname">{{ article.firstname }}, {{ article.created|date("d/m/Y") }}</p>
                </div>
            </div>
        </div>

        <hr>

        <div class="row">
            <div class="col-12 p-0">
                <div class="article-content">
                    <p>{{ article.content|nl2br }}</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="social-share d-flex flex-row justify-content-end align-item-center">
                    <div class="btn-facebook">
                        <a href="https://www.facebook.com/sharer/sharer.php?u=example.org" target="_blank">
                            <img src="{{ asset('assets/icons/share-facebook.png') }}" alt="share">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}